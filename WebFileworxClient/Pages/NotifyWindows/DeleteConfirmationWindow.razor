@inject NewsServices newsServicies

<div class="fixed top-0 left-0 w-full h-full flex justify-center items-center bg-black bg-opacity-10">
    <div class="p-3 bg-white border-3 border-solid border-fw-blue rounded-md shadow-md">
        <p class="text-[30px]"> <b>Delete Confirmation</b></p>
        <p>Are you sure you want to delete <b>@newsServicies.SelectedFile.Name</b>?</p>

        <div class="flex mt-3 justify-end">
            <button @onclick="OnDelete" class="bg-rid hover:bg-rid-hover rounded-md mr-1 text-white p-1 cursor-pointer px-2"><b>Delete</b></button>
            <button @onclick="OnCancel" class="bg-fw-blue hover:bg-fw-blue-hover rounded-md text-white p-1 cursor-pointer px-2"><b>Cancel</b></button>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

}
